@model StockSale.App.Models.Domain.Fiado

<h1 class="title mb-3">Añadir Fiado</h1>
<div class="py-2">
    <form method="post">
        <div class="two-grid">
            <div class="inputBox">
            <input type="text" id="name" asp-for="Name" required/>
            <span>Nombre</span>
        </div>
            <div class="inputBox">
            <input type="date" id="date" asp-for="Date" required/>
            <span>Fecha</span>
        </div>
            <div class="inputBox">
            <input type="text" id="import" asp-for="Import" required/>
            <span>Importe</span>
        </div>
        </div>
        <div class="btn-center">
            <button type="submit" class="conf-button w-50">
                <span class="text">Guardar</span>
            </button>
        </div>
    </form>
</div>