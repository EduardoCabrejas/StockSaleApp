@model StockSale.App.Models.ViewModels.EditProviderOrderViewModel
@{
}
<div class="bg-light bh-opacity-10 py-2">
    <div class="container">
        <h1>Editar Orden de Proveedor</h1>
    </div>
</div>
<div>
    @if (Model != null)
    {
        <form method="post">
            <div hidden>
                <label class="form-label"></label>
                <input type="text" class="form-control" id="id" asp-for="Id" readonly />
            </div>
            <div class="two-grid">
                <div class="mb-3">
                    <label class="form-label">N° Orden</label>
                    <input type="date" class="form-control" id="nProviderOrder" asp-for="NProviderOrder" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Fecha</label>
                    <input type="date" class="form-control" id="date" asp-for="Date" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Importe</label>
                    <input type="text" class="form-control" id="import" asp-for="Import" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Proveedor</label>
                    <select class="form-control" asp-for="ProviderId" asp-items="@(new SelectList(Model.Providers, "Id", "Name"))">
                        <option value="">Seleccione un proveedor</option>
                    </select>
                </div>
            </div>


            <div class="two-grid mb-3 mt-3">
                <button type="submit" class="conf-button"
                        asp-area=""
                        asp-controller="ProviderOrder"
                        asp-action="Edit">
                    <span class="text">Actualizar</span>
                </button>
                <button class="dlt-button" type="submit" asp-area="" asp-controller="ProviderOrder" asp-action="Delete">
                    <span>
                       Eliminar
                    </span>
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-miterlimit="2" stroke-linejoin="round" fill-rule="evenodd" clip-rule="evenodd"><path fill-rule="nonzero" d="m12.002 2.005c5.518 0 9.998 4.48 9.998 9.997 0 5.518-4.48 9.998-9.998 9.998-5.517 0-9.997-4.48-9.997-9.998 0-5.517 4.48-9.997 9.997-9.997zm0 1.5c-4.69 0-8.497 3.807-8.497 8.497s3.807 8.498 8.497 8.498 8.498-3.808 8.498-8.498-3.808-8.497-8.498-8.497zm0 7.425 2.717-2.718c.146-.146.339-.219.531-.219.404 0 .75.325.75.75 0 .193-.073.384-.219.531l-2.717 2.717 2.727 2.728c.147.147.22.339.22.531 0 .427-.349.75-.75.75-.192 0-.384-.073-.53-.219l-2.729-2.728-2.728 2.728c-.146.146-.338.219-.53.219-.401 0-.751-.323-.751-.75 0-.192.073-.384.22-.531l2.728-2.728-2.722-2.722c-.146-.147-.219-.338-.219-.531 0-.425.346-.749.75-.749.192 0 .385.073.531.219z"></path></svg>
                    </span>
                </button>
            </div>
        </form>
    }
    else
    {
        <p> No se pudo encontrar al proveedor.</p>
    }
</div>